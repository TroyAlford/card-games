{
	"compilerOptions": {
		"target": "es2020",
		"module": "commonjs",
		"declaration": true,
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {
			"@card-games/*": [
				"../*/source"
			]
		}
	},
	"include": [
		"source/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}